rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper function to check if user is verified
    function isVerified() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isVerified == true;
    }
    
    // Users collection
    match /users/{userId} {
      // TEMPORARY DEBUG: Allow any create (NO AUTH CHECK)
      // TODO: Revert to: if isAuthenticated()
      allow create: if true;
      
      // Users can read their own document
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Users can update their own basic info (not role or verification status)
      allow update: if isAuthenticated() && 
                       request.auth.uid == userId &&
                       !request.resource.data.diff(resource.data).affectedKeys()
                         .hasAny(['role', 'isVerified', 'operatorId']);
      
      // Admins can read and update any user
      allow read, update: if isAdmin();
      
      // No one can delete users
      allow delete: if false;
    }
    
    // Operators collection (read from Google Sheets, synced to Firestore)
    match /operators/{operatorId} {
      // Authenticated users can read operators (needed for registration matching)
      allow read: if isAuthenticated();
      
      // Only admins can write operators
      allow write: if isAdmin();
    }
    
    // Shifts collection
    match /shifts/{shiftId} {
      // Verified users can read shifts
      allow read: if isVerified();
      
      // Only admins can create/update/delete shifts
      allow write: if isAdmin();
    }
    
    // ShiftRequests collection
    match /shiftRequests/{requestId} {
      // Users can read their own requests (creatorId matches auth.uid)
      allow read: if isAuthenticated() && 
                     resource.data.creatorId == request.auth.uid;
      
      // Verified users can create shift requests
      // Must set creatorId to their own UID
      allow create: if isVerified() &&
                       request.resource.data.creatorId == request.auth.uid;
      
      // Users can update their own pending requests (status = 'OPEN')
      allow update: if isVerified() && 
                       resource.data.creatorId == request.auth.uid &&
                       resource.data.status == 'OPEN';
      
      // Admins can read and update all shift requests
      allow read, update: if isAdmin();
      
      // No one can delete shift requests
      allow delete: if false;
    }
    
    // Notifications collection (Phase 10.1)
    match /notifications/{notifId} {
      // Users can read their own notifications
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Only admins can create notifications
      allow create: if isAdmin();
      
      // Users can update their own notifications (for marking as read)
      allow update: if isAuthenticated() && 
                       resource.data.userId == request.auth.uid;
      
      // No one can delete notifications
      allow delete: if false;
    }
    
    // Settings collection (for QR codes, etc.)
    match /settings/{settingId} {
      // Anyone can read settings
      allow read: if true;
      
      // Only admins can write settings
      allow write: if isAdmin();
    }

    // System Config collection (for Google Sheets URL etc)
    match /system/{configId} {
       // Authenticated users need to read config to Sync
       allow read: if isAuthenticated();
       allow write: if isAdmin();
    }
  }
}

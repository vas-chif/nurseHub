rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Helper Functions ---

    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    function isVerified() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isVerified == true;
    }

    // --- Collections ---
    
    // Users: Profile management
    match /users/{userId} {
      // DEBUG: Allowing unauthenticated creation for easier registration flow during dev
      allow create: if true; 
      
      allow read: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow update of own profile
      allow update: if isAuthenticated() && request.auth.uid == userId && (
        // Case 1: Standard profile update (phone, etc.) - Role and Verification must NOT change
        (!request.resource.data.diff(resource.data).affectedKeys()
          .hasAny(['role', 'isVerified', 'pendingApproval', 'configId', 'operatorId', 'profession']))
        ||
        // Case 2: Self-Sync (linking to operator)
        // Allowed ONLY IF the user is currently NOT linked and they are NOT changing their own role
        (resource.data.operatorId == null && 
         !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']))
      );
      
      // Admins have full access
      allow read, update: if isAdmin();
    }
    
    // Shifts: The actual schedule
    match /shifts/{shiftId} {
      allow read: if isVerified();
      allow write: if isAdmin();
    }
    
    // ShiftRequests: Absence management & Offers
    match /shiftRequests/{requestId} {
      // 1. Owner can read their own
      // 2. ANY authenticated user can read 'OPEN' requests (to see coverage opportunities)
      allow read: if isAuthenticated() && 
                     (resource.data.creatorId == request.auth.uid || 
                      resource.data.status == 'OPEN');
      
      // Creation restricted to verified users (must own the request)
      allow create: if isVerified() &&
                       request.resource.data.creatorId == request.auth.uid;
      
      // Update only own OPEN requests (e.g. to modify/cancel before approval)
      allow update: if isVerified() && 
                       resource.data.creatorId == request.auth.uid &&
                       resource.data.status == 'OPEN';
      
      // Admins have full access
      allow read, update: if isAdmin();
    }
    
    // Notifications: In-app alerts
    match /notifications/{notifId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow update: if isAuthenticated() && resource.data.userId == request.auth.uid; // e.g. mark as read
      allow create: if isAdmin();
    }
    
    // Settings & System Config
    match /settings/{settingId} {
      allow read: if true; // Public settings (e.g. login message)
      allow write: if isAdmin();
    }

    // System Configurations: Multi-config management for different roles
    match /systemConfigurations/{configId} {
      allow read: if true; // Allow any authenticated user to list configs (needed for operator sync)
      allow write: if isAdmin();
      
      // Operators sub-collection: stores operators for each configuration
      // Allow public read for registration matching, write only for admins
      match /operators/{operatorId} {
        allow read: if true;  // Public read for registration email matching
        allow write: if isAdmin();
      }
    }

    match /system/{configId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
